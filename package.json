{
  "name": "getsale-crm",
  "version": "1.0.0",
  "description": "AI CRM SaaS - Enterprise Microservices Platform",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "migrate": "cd migrations && npm run migrate",
    "migrate:rollback": "cd migrations && npm run migrate:rollback",
    "migrate:status": "cd migrations && npm run migrate:status",
    "migrate:make": "cd migrations && npm run migrate:make",
    "seed": "cd migrations && npm run seed"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
